<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef ParentName="MakeStoneBlocksBulkBase" MayRequire="Sarg.alphabiomes">
        <defName>Make_StoneBlocksBulkRoseQuartzAB</defName>
        <label>make rose quartz blocks x3</label>
        <description>Cuts rose quartz chunks into usable blocks in bulk.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>GU_ChunkRoseQuartz</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>GU_ChunkRoseQuartz</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <GU_BlocksRoseQuartz>60</GU_BlocksRoseQuartz>
        </products>
    </RecipeDef>

