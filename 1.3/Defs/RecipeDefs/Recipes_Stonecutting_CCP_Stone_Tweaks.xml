<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef ParentName="MakeStoneBlocksBulkBase" MayRequire="cucumpear.stonetweaks">
        <defName>Make_StoneBlocksBulkPinkMarble</defName>
        <label>make pink marble blocks x3</label>
        <description>Cuts pink marble chunks into usable blocks in bulk.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ChunkPinkMarble</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ChunkPinkMarble</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BlocksPinkMarble>60</BlocksPinkMarble>
        </products>
    </RecipeDef>

