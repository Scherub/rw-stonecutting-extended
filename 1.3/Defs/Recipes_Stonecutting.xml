<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef Name="MakeStoneBlocksBulkBase" Abstract="True">
        <jobString>Cutting stone blocks from chunks in bulk.</jobString>
        <workAmount>4800</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
        <targetCountAdjustment>60</targetCountAdjustment>
        <recipeUsers>
            <li>TableStonecutter</li>
        </recipeUsers>
    </RecipeDef>

    <RecipeDef ParentName="MakeStoneBlocksBulkBase">
        <defName>Make_StoneBlocksBulkSandstone</defName>
        <label>make sandstone blocks x3</label>
        <description>Cuts sandstone chunks into usable blocks in bulk.</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ChunkSandstone</li>
                    </thingDefs>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ChunkSandstone</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BlocksSandstone>60</BlocksSandstone>
        </products>
    </RecipeDef>

